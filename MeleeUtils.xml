<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">

    <Frame name="MeleeUtils_CustomizableWidget" virtual="true" hidden="true" movable="true" enableMouse="false">
        <Scripts>
            <OnLoad>
                self:RegisterForDrag("LeftButton");
                self:SetScript("OnDragStart", self.StartMoving);
                self:SetScript("OnDragStop", self.StopMovingOrSizing);
            </OnLoad>
        </Scripts>
    </Frame>

    <Frame name="MeleeUtils_StatusBar" inherits="BackdropTemplate" virtual="true">
        <Size>
            <AbsDimension x="128" y="25" /> <!-- Frame size -->
        </Size>
        <Frames>
            <!-- create icon -->
            <Frame name="$parent_Icon">
                <Scripts>
                    <OnLoad>
                        self.icon = self:CreateTexture(nil, "ARTWORK")
                        self.icon:SetPoint("LEFT", self, "LEFT", 0, 0)
                    </OnLoad>
                </Scripts>
            </Frame>
            <Frame name="$parent_Progress">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parent_Icon" relativePoint="TOPRIGHT" />
                    <Anchor point="BOTTOMLEFT" relativeTo="$parent_Icon" relativePoint="BOTTOMRIGHT" />
                    <Anchor point="TOPRIGHT" relativeTo="$parent" />
                    <Anchor point="BOTTOMRIGHT" relativeTo="$parent" />
                </Anchors>
                <Frames>
                    <StatusBar name="$parent_Bar" inherits="TextStatusBar">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeTo="$parent"  />
                            <Anchor point="BOTTOMLEFT" relativeTo="$parent"  />
                            <Anchor point="TOPRIGHT" relativeTo="$parent" />
                            <Anchor point="BOTTOMRIGHT" relativeTo="$parent" />
                        </Anchors>
                        <BarTexture file="Interface\RaidFrame\Raid-Bar-Hp-Fill"/>
                        <Layers>
                            <Layer level="OVERLAY">
                                <FontString name="$parent_Text" text="--">
                                    <Color r="0.3" g="0.7" b="1"/>
                                    <Anchors>
                                        <Anchor point="CENTER" />
                                    </Anchors>
                                </FontString>
                            </Layer>
                        </Layers>
                        <Scripts>
                            <OnLoad>
                                self:SetMinMaxValues(0, 1)
                                self:SetValue(0.5)
                            </OnLoad>
                        </Scripts>
                    </StatusBar>
                </Frames>
            </Frame>
        </Frames>
    </Frame>

    <Frame name="MeleeUtils_Flurry" parent="UIParent" inherits="MeleeUtils_StatusBar" hidden="true">
        <Anchors>
            <Anchor point="CENTER" relativePoint="CENTER" relativeTo="UIParent" y="-180" />
        </Anchors>
    </Frame>

    <Frame name="MeleeUtils_Parry" parent="UIParent" inherits="MeleeUtils_CustomizableWidget">
        <Size>
            <AbsDimension x="128" y="128" /> <!-- Frame size -->
        </Size>
        <Anchors>
            <Anchor point="CENTER" relativePoint="CENTER" relativeTo="UIParent" y="100" />
        </Anchors>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture name="$parent_Texture" file="Interface\AddOns\MeleeUtils\assets\PowerAura19.tga">
                    <Size>
                        <AbsDimension x="128" y="128" /> <!-- Texture size -->
                    </Size>
                    <Anchors>
                        <Anchor point="CENTER" />
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
    </Frame>

    <Frame name="MeleeUtils_Combo" parent="UIParent" inherits="MeleeUtils_CustomizableWidget">
        <Size>
            <AbsDimension x="384" y="384" /> <!-- Frame size -->
        </Size>
        <Anchors>
            <Anchor point="CENTER" relativePoint="CENTER" relativeTo="UIParent" y="-30" />
        </Anchors>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture name="$parent_Texture" file="Interface\AddOns\MeleeUtils\assets\PowerAura33.tga">
                    <Size>
                        <AbsDimension x="384" y="384" /> <!-- Texture size -->
                    </Size>
                    <Anchors>
                        <Anchor point="CENTER" />
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
    </Frame>
</Ui>
